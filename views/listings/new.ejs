<% layout("/layouts/boilerplate") %> <!-- Uses boilerplate layout -->

<div class="row mt-3">
    <div class="col-8 offset-2">
        <!-- Heading for new listing creation -->
        <h3>Create a New Post</h3>

        <!-- Form to submit new listing -->
        <form method="POST" action="/listings" novalidate class="needs-validation">

            <!-- Title input field -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Add a cacthy title" 
                type="text" class="form-control" required/> 
                <div class="valid-feedback">Title looks good!</div>
            </div>

            <!-- Description input field -->
            <div class="mb-3">  
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <!-- Image URL input field -->
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image]" placeholder="enter image URL/Link" 
                type="text" class="form-control" />
            </div>

            <!-- Row with price and country inputs -->
            <div class="row">
                <!-- Price input field -->
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" 
                    type="text" class="form-control" required/>
                    <div class="invalid-feedback">price should be valid</div>
                </div>

                <!-- Country input field -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="India" 
                    type="text" class="form-control" required/>
                    <div class="invalid-feedback">country name should be valid</div>
                </div>    
            </div>

            <!-- Location input field -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Aurangabad, Bihar" 
                type="text" class="form-control" required/>
                <div class="invalid-feedback">location should be valid</div>
            </div>

            <!-- Submit button -->
            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
</div>
